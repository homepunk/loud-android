<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="16dp"
        android:left="8dp"
        android:right="8dp">
        <shape android:shape="rectangle">
            <size
                android:width="4dp"
                android:height="4dp" />
            <solid android:color="?attr/colorAccent" />
            <corners android:radius="360dp" />
        </shape>
    </item>

    <item
        android:right="16dp"
        android:top="16dp">
        <shape android:shape="rectangle">
            <size
                android:width="4dp"
                android:height="4dp" />
            <solid android:color="#6763be" />
            <corners android:radius="360dp" />
        </shape>
    </item>

    <item
        android:left="16dp"
        android:top="16dp">
        <shape android:shape="rectangle">
            <size
                android:width="4dp"
                android:height="4dp" />
            <solid android:color="@color/whiteBone" />
            <corners android:radius="360dp" />
        </shape>
    </item>
</layer-list>