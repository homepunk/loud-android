<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="homepunk.github.com.presentation.R" />

        <import type="android.view.View" />

        <import type="com.google.android.flexbox.FlexDirection" />

        <variable
            name="model"
            type="homepunk.github.com.presentation.feature.menu.country.model.CountryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="90dp">
        <View
            app:layout_constraintStart_toStartOf="@id/iv_country"
            app:layout_constraintEnd_toEndOf="@id/iv_country"
            app:layout_constraintTop_toTopOf="@id/iv_country"
            android:backgroundTint="@color/backgroundDark"
            app:animation_scaleFrom="@{0.1f}"
            app:animation_scaleTo="@{0.9f}"
            app:animation_start="@{model.isLocationChangeMode}"
            android:background="@drawable/background_circle_filled_white"
            app:layout_constraintBottom_toBottomOf="@id/iv_country"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/iv_country"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:minWidth="38dp"
            android:minHeight="38dp"
            android:padding="@dimen/margin_small_2dp"
            android:tint="@{model.isSelected ? @color/colorAccent : @color/whiteBone}"
            app:animation_maxWidthAndHeight="@{@dimen/size_64dp}"
            app:animation_updateWidthAndHeightToMax="@{model.isLocationChangeMode}"
            app:imageResId="@{@{model.countryModel.countryMap}}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_map_usa"
            tools:tint="@color/whiteBone" />

        <!--
                <ImageView
                    android:id="@+id/flag"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:layout_marginTop="4dp"
                    android:elevation="@dimen/elevation"
                    app:layout_constraintEnd_toEndOf="@id/iv_country"
                    app:layout_constraintTop_toBottomOf="@id/iv_country"
                    app:layout_constraintBottom_toBottomOf="@id/iv_country"
                    app:roundCornersImageResId="@{model.countryModel.countryFlag}"
                    tools:src="@drawable/ic_ua" />
        -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_6dp"
            app:animation_startFadeIn="@{model.isLocationChangeMode}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_country"
            tools:visibility="gone">

            <TextView
                android:id="@+id/country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@drawable/menu_location_text_color_selector"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="@{model.countryModel.countryName}"
                android:textSize="16sp"
                tools:text="United states" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>