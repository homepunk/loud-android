<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="preview"
            type="homepunk.github.com.domain.model.youtube.YoutubeVideoPreview" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/width_youtube_preview"
        android:layout_height="@dimen/height_youtube_preview"
        app:cardBackgroundColor="@color/background_card"
        app:cardCornerRadius="@dimen/radius_default_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_thumb"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_youtube_video_preview"
                android:scaleType="centerCrop"
                android:src="@drawable/background_events_6"
                app:imageUrl="@{preview.thumb}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/margin_default_10dp"
                android:layout_marginTop="@dimen/margin_default_10dp"
                android:src="@drawable/ic_youtube"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_youtube"
                app:layout_constraintBottom_toBottomOf="@+id/iv_thumb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/FieldTextStyle"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/margin_default_10dp"
                android:layout_marginEnd="@dimen/margin_default_10dp"
                android:layout_marginBottom="@dimen/margin_default_10dp"
                android:layout_marginTop="@dimen/margin_default_10dp"
                android:text="@{preview.title}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/iv_thumb"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_thumb"
                tools:text="Death grips - Face Melter" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>