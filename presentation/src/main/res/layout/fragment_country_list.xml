<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="homepunk.github.com.presentation.R" />

        <import type="com.google.android.flexbox.FlexDirection" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="homepunk.github.com.presentation.feature.menu.country.CountryListViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/background"
        android:minHeight="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rect_bottom_round_corners_dark"
                android:elevation="@dimen/elevation"
                android:paddingStart="@dimen/margin_big_20dp"
                android:paddingTop="@dimen/margin_big_20dp"
                android:paddingEnd="@dimen/margin_big_20dp"
                android:paddingBottom="@dimen/margin_big_20dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="1sp"
                    android:text="selected location"
                    android:textAllCaps="true"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/country"
                    layout="@layout/layout_item_country"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.currentUserCountry.isParentExpanded? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:model="@{viewModel.currentUserCountry}"
                    app:onCountryClickListener="@{viewModel.onCurrentCountryClickListener}" />

                <TextView
                    android:id="@+id/title_saved_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_big_20dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="1sp"
                    android:text="interested \ncities"
                    android:textAllCaps="true"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/country"
                    app:layout_constraintTop_toTopOf="@+id/title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:adapter="@{viewModel.currentUserCountry.savedAdapter}"
                    app:animation_translateFromEnd="@{viewModel.currentUserCountry.isParentExpanded}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:itemDecoration_top="@{@dimen/margin_default_10dp}"
                    app:layout_constraintBottom_toBottomOf="@id/country"
                    app:layout_constraintStart_toEndOf="@+id/country"
                    app:layout_constraintTop_toTopOf="@id/country"
                    tools:itemCount="5"
                    tools:listitem="@layout/layout_item_location_child" />
                <!--app:flexLayoutManager="@{FlexDirection.COLUMN}"-->

                <TextView
                    style="@style/ItemTitleTextStyle"
                    android:layout_marginStart="@dimen/margin_big_20dp"
                    android:layout_marginTop="@dimen/margin_default_10dp"
                    android:text="see all"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/recyclerView"
                    app:layout_constraintTop_toBottomOf="@id/recyclerView" />

                <View
                    style="@style/SecondaryTitleTextStyle"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/background_rect_round_corners_accent"
                    android:text="DRAG to View all"
                    android:textColor="?colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/country" />

