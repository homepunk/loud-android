<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/background">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_big_20dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="1sp"
            android:text="selected location"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout_cities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big_20dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/background_rect_bottom_round_corners_dark"
            android:elevation="@dimen/elevation"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_big_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:roundCornersImageResId="@{@drawable/ic_gr}"
                        tools:src="@drawable/ic_map_ge"
                        tools:tint="@color/whiteBone" />

                </LinearLayout>


                <include
                    android:id="@+id/country"
                    layout="@layout/layout_item_country"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:model="@{viewModel.currentUserCountry}"
                    app:onCountryClickListener="@{viewModel.onCurrentCountryClickListener}" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:roundCornersImageResId="@{@drawable/ic_fr}"
                        tools:src="@drawable/ic_map_fr"
                        tools:tint="@color/whiteBone" />

                </LinearLayout>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingTop="@dimen/margin_big_20dp"
                app:adapter="@{viewModel.currentUserCountry.savedAdapter}"
                app:animation_translateFromEnd="@{viewModel.currentUserCountry.isParentExpanded}"
                app:flexLayoutManager="@{FlexDirection.ROW}"
                app:itemDecoration_startTop="@{@dimen/margin_default_10dp}"
                app:itemDecoration_top="@{@dimen/margin_default_10dp}"
                tools:itemCount="2"
                tools:listitem="@layout/layout_item_location_child" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <data>

        <import type="homepunk.github.com.presentation.R" />

        <import type="com.google.android.flexbox.FlexDirection" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="homepunk.github.com.presentation.feature.menu.country.CountryListViewModel" />
    </data>
</layout>