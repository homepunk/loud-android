<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="homepunk.github.com.presentation.feature.discover.event.DiscoverEventViewModel" />

        <variable
            name="appModeModel"
            type="homepunk.github.com.presentation.common.model.mode.AppModeModel" />

        <variable
            name="onParentChildClickListener"
            type="homepunk.github.com.presentation.core.listener.OnParentChildClickListener"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_root_layout"
        android:layout_width="match_parent"
        bind:scrollToPosition="@{viewModel.parentFocusIndex}"
        bind:scrollToRecyclerId="@{@id/rv_upcoming_events}"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/header_primary_events"
                layout="@layout/item_section_header_highlighted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                bind:sectionTitle="@{@string/title_most_popular_event}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_primary_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_primary_events"
                android:layout_marginTop="@dimen/margin_default_10dp"
                android:layout_marginBottom="@dimen/margin_default_10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                bind:itemDecoration_left="@{@dimen/margin_default_10dp}"
                bind:itemDecoration_startLeft="@{@dimen/margin_big_20dp}"
                bind:itemList="@{viewModel.primaryEventsList}"
                tools:listitem="@layout/layout_item_primary_event" />
            <!--bind:adapter="@{viewModel.primaryEventAdapter}"-->

            <include
                android:id="@+id/header_upcoming_events"
                layout="@layout/item_section_header_highlighted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_primary_events"
                bind:sectionTitle="@{@string/title_upcoming_event}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_upcoming_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_upcoming_events"
                android:layout_marginTop="@dimen/margin_default_10dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                bind:expandableItemList="@{viewModel.locationEventsList}"
                bind:itemDecoration_top="@{@dimen/margin_default_10dp}"
                bind:onParentClickListener="@{viewModel.onParentClickListener}"
                bind:onChildClickListener="@{viewModel.onChildClickListener}"
                tools:listitem="@layout/layout_item_parent_location_children_events" />
            <!--bind:adapter="@{viewModel.locatonEventsAdapter}"-->
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>