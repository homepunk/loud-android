<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <include
            android:id="@+id/section_divider"
            layout="@layout/item_section_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_latest_releases"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_card_default"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section_divider"
            tools:ignore="RtlSymmetry"
            tools:listItem="@layout/list_item_latest_release" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>