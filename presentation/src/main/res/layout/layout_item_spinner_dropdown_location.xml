<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="homepunk.github.com.domain.model.internal.UserLocation" />
    </data>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:orientation="vertical"
        android:text="@{model.locationName}"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_default_10dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_default_10dp"
        android:textColor="@drawable/highlight_state_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="asdasdasd" />
    <!--app:preselectTextColor="@{model.isCurrent ? @color/colorAccent : @color/text}"-->
</layout>