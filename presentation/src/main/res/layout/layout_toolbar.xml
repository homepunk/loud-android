<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="homepunk.github.com.presentation.R" />

        <variable
            name="title"
            type="String" />

        <import type="homepunk.github.com.domain.model.AppMode" />

        <import type="homepunk.github.com.domain.model.internal.UserLocation" />

        <import type="homepunk.github.com.presentation.feature.widget.dropdownlistview.OnDropDownClickListener" />

        <import type="java.util.List" />

        <import type="androidx.lifecycle.MutableLiveData" />

        <variable
            name="onMenuClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="isMenuOpened"
            type="MutableLiveData&lt;Boolean>" />

        <variable
            name="dropDownSelection"
            type="Integer" />

        <variable
            name="dropDownList"
            type="List&lt;UserLocation>" />

        <variable
            name="onLocationDropDownClickListener"
            type="OnDropDownClickListener&lt;UserLocation>" />

        <variable
            name="onLocationPinClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onModeClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="appModeModel"
            type="homepunk.github.com.presentation.common.model.mode.AppModeModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">


        <ImageView
            android:id="@+id/menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="@dimen/margin_big_20dp"
            android:onClickListener="@{onMenuClickListener}"
            android:src="@drawable/ic_controls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_big_20dp"
            android:background="@drawable/background_rect_round_corners_gray"
            app:defaultQueryHint="Search for events"
            app:layout_constraintBottom_toBottomOf="@+id/menu"
            app:layout_constraintStart_toEndOf="@+id/menu"
            app:layout_constraintTop_toTopOf="@+id/menu"
            app:layout_scrollFlags="scroll|enterAlways"
            app:queryHint="Search for events"
            app:searchIcon="@drawable/ic_search" />

        <homepunk.github.com.presentation.feature.widget.dropdownlistview.DropDownListView
            android:id="@+id/location_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default_8dp"
            app:isVisible="@{!isMenuOpened}"
            app:animationResId="@{R.anim.item_animation_from_top}"
            app:animationDuration="@{300}"
            app:dropDownList="@{dropDownList}"
            app:dropDownSelection="@{dropDownSelection}"
            app:onDropDownClickListener="@{onLocationDropDownClickListener}"
            app:layoutResource="@layout/layout_item_spinner_location"
            app:dropDownLayoutResource="@layout/layout_item_spinner_dropdown_location"
            app:layout_constraintBottom_toBottomOf="@+id/iv_location"
            app:layout_constraintEnd_toStartOf="@+id/iv_location"
            app:layout_constraintTop_toTopOf="@+id/iv_location"/>
<!--            app:dropDownSelection="@{currentUserLocationPosition}"
-->

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClickListener="@{onLocationPinClickListener}"
            android:src="@drawable/ic_target"
            android:tint="@color/whiteBone"
            app:layout_constraintBottom_toBottomOf="@+id/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menu" />

        <View
            app:layout_constraintTop_toTopOf="@+id/iv_location"
            app:layout_constraintBottom_toBottomOf="@+id/iv_location"
            app:layout_constraintStart_toStartOf="@+id/iv_location"
            app:layout_constraintEnd_toEndOf="@+id/iv_location"
            app:scale="@{isMenuOpened ? 6f : 1f}"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/shape_circle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>