<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="homepunk.github.com.presentation.R" />

        <variable
            name="title"
            type="String" />

        <import type="homepunk.github.com.domain.model.AppMode" />

        <variable
            name="onMenuClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onModeClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="appModeModel"
            type="homepunk.github.com.presentation.common.model.mode.AppModeModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

            <TextView
                android:id="@+id/btn_event"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_marginBottom="@dimen/margin_default_8dp"
                android:layout_marginTop="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu"
                android:gravity="start|bottom"
                android:fontFamily="@font/lato_bold"
                android:onClickListener="@{onModeClickListener}"
                android:text="EVENTS"
                android:textAllCaps="true"
                android:textSize="34sp"
                android:textColor="@color/subtitle3"
                bind:updateModeTitleOnModeChange="@{appModeModel}"
                bind:btnMode="@{AppMode.EVENTS}"/>

            <TextView
                android:id="@+id/btn_releases"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:gravity="start|bottom"
                android:layout_marginStart="@dimen/margin_default_10dp"
                android:layout_marginEnd="@dimen/margin_big_20dp"
                android:layout_marginTop="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/margin_default_8dp"
                app:layout_constraintStart_toEndOf="@+id/btn_event"
                app:layout_constraintTop_toBottomOf="@+id/menu"
                android:fontFamily="@font/lato_bold"
                android:onClickListener="@{onModeClickListener}"
                android:text="ARTISTS"
                android:textAllCaps="true"
                android:textSize="34sp"
                android:textColor="@color/subtitle3"
                bind:updateModeTitleOnModeChange="@{appModeModel}"
                bind:btnMode="@{AppMode.RELEASES}" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_10dp"
            android:layout_marginEnd="@dimen/margin_default_10dp"
            android:layout_marginBottom="@dimen/margin_small_6dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/title_frame"
            app:layout_constraintStart_toStartOf="@+id/title_frame"
            app:layout_constraintTop_toBottomOf="@+id/title_frame"
            app:srcCompat="@drawable/title_arrow" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="@dimen/margin_big_20dp"
            android:onClickListener="@{onMenuClickListener}"
            android:src="@drawable/ic_controls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_big_20dp"
            app:searchIcon="@drawable/ic_search"
            android:background="@drawable/background_rect_round_corners_gray"
            app:defaultQueryHint="Search for events"
            app:layout_constraintStart_toEndOf="@+id/menu"
            app:layout_constraintTop_toTopOf="@+id/menu"
            app:layout_constraintBottom_toBottomOf="@+id/menu"
            app:layout_scrollFlags="scroll|enterAlways"
            app:queryHint="Search for events" />

        <View
            android:id="@+id/view2"
            android:layout_width="42dp"
            android:layout_height="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_frame" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>