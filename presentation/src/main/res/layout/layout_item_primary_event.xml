<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="homepunk.github.com.presentation.feature.event.model.EventModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_big_20dp"
        android:layout_marginEnd="@dimen/margin_big_20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/radius_default_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    bind:imageUrl="@{model.thumb}"
                    tools:src="@drawable/background_events_4" />

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.7"
                    android:background="@drawable/bg_shadow_detail"
                    app:layout_constraintBottom_toBottomOf="@+id/thumb"
                    app:layout_constraintEnd_toEndOf="@+id/thumb"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/thumb" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_big_20dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@{model.title}"
                    android:textAllCaps="true"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/text_size_largest_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="THE COLD DICKS" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="@dimen/margin_big_20dp"
                    android:src="@drawable/ic_location_pin"
                    android:tint="@color/whiteBone"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/thumb"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/place"
                    style="@style/FieldTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_6dp"
                    android:text="@{`At ` + model.location}"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    tools:text="At Zhara" />

                <TextView
                    android:id="@+id/subtitle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_default_12dp"
                    android:layout_marginTop="@dimen/margin_small_6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/background_circle_filled_gray"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/margin_default_10dp"
                    android:paddingTop="@dimen/margin_small_4dp"
                    android:paddingEnd="@dimen/margin_default_10dp"
                    android:paddingBottom="@dimen/margin_small_4dp"
                    android:text="RAP"
                    android:textColor="@color/subtitle2"
                    android:textSize="12sp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@+id/thumb"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place" />

                <TextView
                    android:id="@+id/subtitle3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_default_8dp"
                    android:layout_marginTop="@dimen/margin_small_4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/background_circle_filled_gray"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/margin_default_10dp"
                    android:paddingTop="@dimen/margin_small_6dp"
                    android:paddingEnd="@dimen/margin_default_10dp"
                    android:paddingBottom="@dimen/margin_small_4dp"
                    android:text="EXPERIMENTAL"
                    android:textColor="@color/subtitle2"
                    android:textSize="12sp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@+id/subtitle2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place" />

                <TextView
                    android:id="@+id/subtitle4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_big_20dp"
                    android:alpha="0.8"
                    android:background="@drawable/background_circle_filled_gray"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/margin_default_10dp"
                    android:paddingTop="@dimen/margin_small_4dp"
                    android:paddingEnd="@dimen/margin_default_10dp"
                    android:paddingBottom="@dimen/margin_small_4dp"
                    android:text="#RAP"
                    android:textColor="@color/subtitle2"
                    android:textSize="12sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/place" />

                <TextView
                    android:id="@+id/subtitle5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_default_8dp"
                    android:alpha="0.8"
                    android:background="@drawable/background_circle_filled_gray"
                    android:fontFamily="@font/lato"
                    android:paddingStart="@dimen/margin_default_10dp"
                    android:paddingTop="@dimen/margin_small_4dp"
                    android:paddingEnd="@dimen/margin_default_10dp"
                    android:paddingBottom="@dimen/margin_small_4dp"
                    android:text="#EXPERIMENTAL"
                    android:textColor="@color/subtitle2"
                    android:textSize="12sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/subtitle4"
                    app:layout_constraintStart_toEndOf="@+id/subtitle4"
                    app:layout_constraintTop_toTopOf="@+id/subtitle4" />


                <ImageView
                    android:id="@+id/btn_favorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="@dimen/margin_big_20dp"
                    android:src="@drawable/ic_heart"
                    android:tint="@color/subtitle2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/subtitle5"
                    app:layout_constraintTop_toTopOf="@+id/subtitle5" />
                <!--

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:alpha="0.3"
                                android:background="@color/black"
                                app:layout_constraintTop_toTopOf="@+id/title" />
                -->


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:paddingTop="8dp"
            android:text="@{model.title}"
            android:textColor="@color/whiteBone"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/card"
            app:layout_constraintStart_toStartOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/card"
            tools:text="Apollo Brown Joell Ortiz - Mona Lisa" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>