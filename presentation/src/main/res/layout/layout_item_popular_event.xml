<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="homepunk.github.com.presentation.feature.event.model.EventModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="@dimen/radius_default_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    bind:imageUrl="@{model.thumb}"
                    tools:src="@drawable/background_events_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.5"
                    android:background="@drawable/bg_shadow_detail"
                    app:layout_constraintBottom_toBottomOf="@+id/thumb"
                    app:layout_constraintEnd_toEndOf="@+id/thumb"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/thumb" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="36dp"
                    android:layout_height="42dp"
                    android:layout_margin="@dimen/margin_default_10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:id="@+id/frameLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.7"
                        android:background="@drawable/background_rect_round_corners" />

                    <TextView
                        android:id="@+id/month1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_default_10dp"
                        android:fontFamily="@font/lato"
                        android:textAllCaps="true"
                        android:textColor="@color/modeEventsColor"
                        android:textSize="8sp"
                        bind:layout_constraintBottom_toTopOf="@+id/date1"
                        bind:layout_constraintEnd_toEndOf="parent"
                        bind:layout_constraintStart_toStartOf="parent"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:monthForInt="@{model.month}"
                        tools:text="июнь" />

                    <TextView
                        android:id="@+id/date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/lato"
                        android:text="@{model.date}"
                        android:textColor="@color/modeEventsColor"
                        android:textSize="16sp"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintEnd_toEndOf="parent"
                        bind:layout_constraintStart_toStartOf="parent"
                        bind:layout_constraintTop_toBottomOf="@+id/month1"
                        tools:text="30" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/margin_default_10dp"
                    android:layout_marginBottom="@dimen/margin_default_10dp"
                    android:src="@drawable/ic_heart"
                    android:tint="@color/whiteBone"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="@+id/view" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_margin="@dimen/margin_default_10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/frameLayout2"
                        android:layout_width="match_parent"
                        android:alpha="0.7"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_rect_round_corners" />

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:textAllCaps="true"
                        android:textColor="@color/modeEventsColor"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:layout_constraintEnd_toEndOf="parent"
                        bind:layout_constraintStart_toStartOf="parent"
                        bind:layout_constraintBottom_toTopOf="@+id/date"
                        bind:monthForInt="@{model.month}"
                        tools:text="июнь" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/lato"
                        android:text="@{model.date}"
                        android:textColor="@color/modeEventsColor"
                        android:textSize="16sp"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintEnd_toEndOf="parent"
                        bind:layout_constraintStart_toStartOf="parent"
                        bind:layout_constraintTop_toBottomOf="@+id/month"
                        tools:text="30" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:alpha="0.3"
                                android:background="@color/black"
                                app:layout_constraintTop_toTopOf="@+id/title" />
                -->



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="@{model.title }"
            android:layout_marginTop="@dimen/margin_default_10dp"
            android:textColor="?colorAccent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/card"
            app:layout_constraintStart_toStartOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/card"
            tools:text="atlas weekend " />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="@{model.startFromToday }"
            android:textColor="@color/whiteBone"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/card"
            app:layout_constraintStart_toStartOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="atlas weekend" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>