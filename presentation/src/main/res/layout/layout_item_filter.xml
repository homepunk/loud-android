<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_default_10dp"
    android:background="@drawable/background_rect_round_corners_gray">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small_6dp"
        android:layout_marginBottom="@dimen/margin_small_6dp"
        android:layout_marginStart="@dimen/margin_default_10dp"
        android:layout_marginEnd="@dimen/margin_default_10dp"
        android:textColor="@color/text"
        android:textSize="14sp"
        tools:text="DISCOVER" />
</FrameLayout>
