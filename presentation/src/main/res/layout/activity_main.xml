<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pagerAdapter"
            type="homepunk.github.com.presentation.core.adapter.SimpleViewPagerAdapter" />

        <variable
            name="viewModel"
            type="homepunk.github.com.presentation.feature.main.MainActivityViewModel" />

        <variable
            name="menuViewModel"
            type="homepunk.github.com.presentation.feature.main.menu.MainMenuViewModel" />

        <variable
            name="appModeModel"
            type="homepunk.github.com.presentation.common.model.mode.AppModeModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".feature.main.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="@dimen/margin_big_20dp"
                app:appModeModel="@{appModeModel}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_default_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
                app:layout_constraintTop_toBottomOf="@+id/bottom_nav_layout">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    bind:adapter="@{pagerAdapter}"
                    bind:fragmentList="@{viewModel.fragmentList}"
                    bind:onPageChangeListener="@{viewModel.onPageChangeListener}" />

                <View
                    android:id="@+id/pager_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0"
                    android:background="@color/darkBackground" />

            </FrameLayout>

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/boom_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big_20dp"
                android:alpha="0.8"
                app:bmb_autoHide="true"
                app:bmb_buttonEnum="textOutsideCircle"
                app:bmb_normalColor="@color/yellow"
                app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
                app:layout_constraintEnd_toEndOf="parent"
                app:menuIconPaddingLeft="@{@dimen/margin_default_8dp}"
                app:menuIconPaddingTop="@{@dimen/margin_default_8dp}"
                app:menuList="@{menuViewModel.menuList}"
                app:onBoomListener="@{menuViewModel.onBoomMenuListener}" />


            <homepunk.github.com.presentation.feature.widget.tablayout.BubbleTabLayout
                android:id="@+id/bottom_nav_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/margin_default_10dp"
                app:bubble_buttonGap="@dimen/margin_default_10dp"
                app:bubble_defaultColor="@color/grey"
                app:bubble_highlightedColor="?attr/colorAccent"
                app:bubble_tabVerticalMargin="@dimen/margin_small_4dp"
                app:bubble_startMargin="@dimen/margin_big_20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_nav"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="?colorPrimaryDark"
                app:itemBackground="?colorPrimaryDark"
                app:itemIconTint="@drawable/selector_bottom_nav"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/navigation"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--<include layout="@layout/layout_bottom_menu" />-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>