<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FiltersLayout">
        <attr name="fl_buttonGap" format="integer|dimension"/>
        <attr name="fl_highlightedColor" format="color"/>
        <attr name="fl_textAllCaps" format="boolean"/>
        <attr name="fl_tabFixedWidth" format="boolean"/>
        <attr name="fl_tabVerticalMargin" format="integer|dimension"/>
    </declare-styleable>

    <declare-styleable name="ExpandableHeader">
        <attr name="el_title" format="string|reference"/>
        <!--<attr name="el_hint" format="string|reference"/>-->
        <attr name="el_hasHint" format="boolean"/>
        <attr name="el_expanded" format="boolean"/>
        <attr name="el_headerTint" format="color"/>
        <attr name="el_headerTitleStartMargin" format="integer|dimension"/>
        <attr name="el_headerHorizontalPadding" format="integer|dimension"/>
    </declare-styleable>

    <declare-styleable name="DropDownListView">
        <attr name="layoutResource" format="reference"/>
        <attr name="layoutResourceVariableId" format="integer"/>
        <attr name="dropDownLayoutResource" format="reference"/>
        <attr name="dropDownLayoutResourceVariableId" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MenuLayout">
        <attr name="menu_scaleFactor" format="float"/>
        <attr name="menu_textGap" format="integer|dimension"/>
        <attr name="menu_textSize" format="integer|dimension"/>
        <attr name="menu_textDefaultColor" format="color"/>
        <attr name="menu_textHighlightColor" format="color"/>
        <attr name="menu_currentActionId" format="integer"/>
    </declare-styleable>

</resources>